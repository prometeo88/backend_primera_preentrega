<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Time Products</title>
  </head>
  <body>
    <h1>Productos Actualizados en tiempo real</h1>

    <div>
      <input
        type="text"
        id="idDelete"
        placeholder="Ingrese el Id del producto a eliminar" style="width: 250px"
      />
      <button id="btn-send-delete" onclick="deleteId()" >Eliminar Producto</button>
    </div>

    <ul>
      {{#each loadRTProducts}}
        <li>Nombre: {{this.title}} ID: {{this.id}}</li>
      {{/each}}
    </ul>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/index.js"></script>

  </body>

</html>